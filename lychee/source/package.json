			"Sprite":    [ "js" ],
			"Switch":    [ "js" ],
			"Textarea":  [ "js" ]
		},

		"verlet": {
			"AngleConstraint":    [ "js" ],
			"DistanceConstraint": [ "js" ],
			"Particle":           [ "js" ],
			"Tire":               [ "js" ],
			"Vector2":            [ "js" ],
			"World":              [ "js" ]
