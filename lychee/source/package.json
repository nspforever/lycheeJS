{

	"tags": {

		"platform": {

			"html":         "platform/html",
			"nodejs":       "platform/nodejs",
			"nodejs-webgl": "platform/nodejs-webgl"

		}

	},

	"build": {

		"lychee.html":   [ "lychee.game.Main", false, { "lychee": "./source" }, { "platform": [ "html"   ] } ],
		"lychee.nodejs": [ "lychee.game.Main", false, { "lychee": "./source" }, { "platform": [ "nodejs" ] } ]

	},

	"source": {

		"platform": {

			"html": {

				"net": {
					"Client": [ "js" ],
					"Remote": [ "js" ],
					"Server": [ "js" ]
				},

				"Input":    [ "js" ],
				"Renderer": [ "js" ],
				"Viewport": [ "js" ]

			},

			"nodejs": {

				"net": {
					"Client":   [ "js" ],
					"Remote":   [ "js" ],
					"Server":   [ "js" ]
				},

				"Input":    [ "js" ],
				"Renderer": [ "js" ],
				"Viewport": [ "js" ]

			},

			"webgl": {

				"Renderer": [
					"js",
					"Sprite.vs",
					"Sprite.fs"
				]

			}

		},

		"data": {
			"BitON": [ "js" ],
			"PO":    [ "js" ]
		},

		"event": {
